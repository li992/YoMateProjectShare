@model  IEnumerable<YoMateProjectShare.Models.Friend>
@{
    ViewBag.Title="Index" ;
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        <!-- for loop creating -->
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.friendNickname)
                </th>
                <td>
                    @Html.ActionLink("Details","Index","Message", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>