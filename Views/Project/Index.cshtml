@model IEnumerable<YoMateProjectShare.Models.Projects>
@{
    ViewBag.Title = "Index";
}
<h2>this is project index page</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p> change</p>


<div style="position:absolute;width:60%;left:20%;text-align:center;text-anchor:middle;">

    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Project ID
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ArticleName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.AuthorName)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.UploadTime)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- for loop creating -->
                @foreach (var item in Model)
                {

                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => item.Id)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArticleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AuthorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UploadTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Detail", "Detail", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>